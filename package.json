{
  "name": "@kittenlib/js-utils",
  "version": "1.0.2",
  "description": "a simple JavaScript / TypeScript utility library for learning and practice purpose",
  "keywords": [
    "utils",
    "typescript",
    "string",
    "math"
  ],
  "license": "MIT",
  "author": "Angkur Mondal",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build"    
  },
  "homepage": "https://github.com/Mon-SDE/js-utils#readme",
  "bugs": {
    "url": "https://github.com/Mon-SDE/js-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mon-SDE/js-utils.git"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}